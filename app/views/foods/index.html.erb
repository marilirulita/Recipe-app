<div class='list_container'>
  <div class='create_button'>
   <%= link_to 'Add new food', new_food_path%>
 </div>

 <div class='content_table'>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>

    </thead>

    <tbody>
    <% @my_foods.each do |food| %>
      <tr>
        <td><%= food.name%></td>
        <td><%= food.measurement_unit%></td>
        <td><%= "$ #{food.price}" %></td>
        <td><%= food.quantity%></td>
        <td><%= button_to 'Delete', food_path(id: food), method: :delete, class: "danger"%></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>

</div>